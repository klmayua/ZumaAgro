# Zuma Agro Website Environment Variables

# Application
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME="Zuma Agro Allied Integrated Limited"

# Contact Form API (use a service like Formspree, EmailJS, or your own)
NEXT_PUBLIC_CONTACT_FORM_ENDPOINT=/api/contact

# Email Service (for form submissions)
EMAIL_SERVICE=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Sanity CMS (optional - for content management)
NEXT_PUBLIC_SANITY_PROJECT_ID=your-project-id
NEXT_PUBLIC_SANITY_DATASET=production
SANITY_API_TOKEN=your-sanity-token

# Algolia Search (optional - for advanced search)
NEXT_PUBLIC_ALGOLIA_APP_ID=your-app-id
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY=your-search-key
ALGOLIA_ADMIN_KEY=your-admin-key

# Database (optional - for dynamic features)
DATABASE_URL=postgresql://user:password@localhost:5432/zuma_agro

# Authentication (for investor portal)
NEXTAUTH_SECRET=your-secret-key-here-generate-with-openssl-rand-base64-32
NEXTAUTH_URL=http://localhost:3000

# Analytics (optional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=yourdomain.com

# Netlify (for deployment)
NETLIFY_SITE_ID=your-site-id
