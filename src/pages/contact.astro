---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Section from '../components/ui/Section.astro';
import Breadcrumb from '../components/ui/Breadcrumb.astro';
import GlassCard from '../components/ui/GlassCard.astro';
import Button from '../components/ui/Button.astro';

const departments = [
  { name: 'General Inquiries', email: 'info@zumaagro.com', phone: '+234 800 ZUMA 000' },
  { name: 'Sales & Partnerships', email: 'sales@zumaagro.com', phone: '+234 800 ZUMA 001' },
  { name: 'Investor Relations', email: 'investors@zumaagro.com', phone: '+234 800 ZUMA 002' },
  { name: 'Media & Press', email: 'media@zumaagro.com', phone: '+234 800 ZUMA 003' },
  { name: 'Careers', email: 'careers@zumaagro.com', phone: '+234 800 ZUMA 004' },
  { name: 'Support', email: 'support@zumaagro.com', phone: '+234 800 ZUMA 005' },
];

const offices = [
  { city: 'Abuja', address: 'Plot 1234, Central Business District, Abuja, Nigeria', phone: '+234 9 123 4567' },
  { city: 'Lagos', address: '15th Floor, Marina Towers, Victoria Island, Lagos, Nigeria', phone: '+234 1 234 5678' },
  { city: 'Kaduna', address: 'Zuma Agro Ranch HQ, Kaduna South, Nigeria', phone: '+234 62 123 456' },
];

const faqs = [
  {
    question: 'How can I invest in Zuma Agro?',
    answer: 'We welcome accredited investors. Please contact our Investor Relations team at investors@zumaagro.com for detailed information.',
  },
  {
    question: 'Do you offer partnership opportunities?',
    answer: 'Yes, we partner with distributors, retailers, and agricultural service providers. Contact our Sales team to discuss opportunities.',
  },
  {
    question: 'How can I purchase your products?',
    answer: 'Our products are available through authorized distributors nationwide. Contact Sales for distributor locations near you.',
  },
  {
    question: 'Do you offer farm tours?',
    answer: 'Yes, we organize educational tours for schools, investors, and partners. Please book in advance through our General Inquiries line.',
  },
];
---

<BaseLayout title="Contact Us | Zuma Agro">
  <Header />

  <main>
    <!-- Hero -->
    <section class="relative h-[40vh] flex items-center bg-zuma-navy">
      <div class="absolute inset-0">
        <img src="/images/contact-hero.jpg" alt="Contact" class="w-full h-full object-cover opacity-40" />
      </div>
      <div class="relative container mx-auto px-4 sm:px-6 lg:px-8">
        <Breadcrumb items={[{ label: 'Contact' }]} />
        <h1 class="text-5xl md:text-6xl font-bold text-white mt-8">
          Get in <span class="text-zuma-gold">Touch</span>
        </h1>
      </div>
    </section>

    <!-- Contact Form & Info -->
    <Section>
      <div class="grid lg:grid-cols-2 gap-16">
        <!-- Form -->
        <div>
          <h2 class="text-3xl font-bold text-zuma-navy mb-6">Send us a Message</h2>
          <form class="space-y-6" action="/api/contact" method="POST">
            <div class="grid md:grid-cols-2 gap-6">
              <div>
                <label class="block text-sm font-semibold text-zuma-navy mb-2">First Name</label>
                <input
                  type="text"
                  name="firstName"
                  required
                  class="w-full px-4 py-3 rounded-xl border border-zuma-navy/10 focus:border-zuma-gold focus:ring-2 focus:ring-zuma-gold/20 outline-none transition-all"
                  placeholder="John"
                />
              </div>
              <div>
                <label class="block text-sm font-semibold text-zuma-navy mb-2">Last Name</label>
                <input
                  type="text"
                  name="lastName"
                  required
                  class="w-full px-4 py-3 rounded-xl border border-zuma-navy/10 focus:border-zuma-gold focus:ring-2 focus:ring-zuma-gold/20 outline-none transition-all"
                  placeholder="Doe"
                />
              </div>
            </div>

            <div>
              <label class="block text-sm font-semibold text-zuma-navy mb-2">Email</label>
              <input
                type="email"
                name="email"
                required
                class="w-full px-4 py-3 rounded-xl border border-zuma-navy/10 focus:border-zuma-gold focus:ring-2 focus:ring-zuma-gold/20 outline-none transition-all"
                placeholder="john@example.com"
              />
            </div>

            <div>
              <label class="block text-sm font-semibold text-zuma-navy mb-2">Department</label>
              <select
                name="department"
                required
                class="w-full px-4 py-3 rounded-xl border border-zuma-navy/10 focus:border-zuma-gold focus:ring-2 focus:ring-zuma-gold/20 outline-none transition-all bg-white"
              >
                <option value="">Select a department</option>
                {departments.map((dept) => (
                  <option value={dept.name}>{dept.name}</option>
                ))}
              </select>
            </div>

            <div>
              <label class="block text-sm font-semibold text-zuma-navy mb-2">Message</label>
              <textarea
                name="message"
                required
                rows="5"
                class="w-full px-4 py-3 rounded-xl border border-zuma-navy/10 focus:border-zuma-gold focus:ring-2 focus:ring-zuma-gold/20 outline-none transition-all resize-none"
                placeholder="How can we help you?"
              ></textarea>
            </div>

            <Button type="submit" variant="primary" size="lg" class="w-full">
              Send Message
            </Button>
          </form>
        </div>

        <!-- Contact Info -->
        <div>
          <h2 class="text-3xl font-bold text-zuma-navy mb-6">Contact Information</h2>

          <div class="space-y-6 mb-12">
            {departments.map((dept) => (
              <GlassCard class="flex items-center justify-between">
                <div>
                  <h4 class="font-bold text-zuma-navy">{dept.name}</h4>
                  <p class="text-sm text-zuma-navy/60">{dept.email}</p>
                </div>
                <a href={`tel:${dept.phone}`} class="text-zuma-gold hover:underline text-sm">
                  {dept.phone}
                </a>
              </GlassCard>
            ))}
          </div>

          <!-- Office Locations -->
          <h3 class="text-xl font-bold text-zuma-navy mb-4">Our Offices</h3>
          <div class="space-y-4">
            {offices.map((office) => (
              <div class="p-4 border border-zuma-navy/10 rounded-xl">
                <h4 class="font-bold text-zuma-navy">{office.city}</h4>
                <p class="text-sm text-zuma-navy/70">{office.address}</p>
                <p class="text-sm text-zuma-gold mt-1">{office.phone}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </Section>

    <!-- FAQ -->
    <Section>
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl font-bold text-zuma-navy text-center mb-12">Frequently Asked Questions</h2>

        <div class="space-y-4">
          {faqs.map((faq, index) => (
            <div class="border border-zuma-navy/10 rounded-xl overflow-hidden">
              <button
                class="w-full px-6 py-4 text-left flex items-center justify-between hover:bg-zuma-navy/5 transition-colors"
                onclick={`document.getElementById('faq-${index}').classList.toggle('hidden')`}
              >
                <span class="font-semibold text-zuma-navy">{faq.question}</span>
                <svg class="w-5 h-5 text-zuma-navy/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
              </button>
              <div id={`faq-${index}`} class="hidden px-6 pb-4">
                <p class="text-zuma-navy/70">{faq.answer}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </Section>
  </main>

  <Footer />
</BaseLayout>
