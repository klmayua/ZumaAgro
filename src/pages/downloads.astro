---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Section from '../components/ui/Section.astro';
import Breadcrumb from '../components/ui/Breadcrumb.astro';
import GlassCard from '../components/ui/GlassCard.astro';
import Button from '../components/ui/Button.astro';

const categories = ['All', 'Annual Reports', 'Brochures', 'Presentations', 'Forms', 'Media Kit'];

const downloads = [
  {
    title: '2024 Annual Report',
    category: 'Annual Reports',
    description: 'Comprehensive overview of our 2024 performance and achievements.',
    size: '4.2 MB',
    type: 'PDF',
    date: 'March 2024',
  },
  {
    title: 'Company Brochure',
    category: 'Brochures',
    description: 'Overview of Zuma Agro operations, services, and capabilities.',
    size: '8.5 MB',
    type: 'PDF',
    date: 'January 2024',
  },
  {
    title: 'Investor Presentation Q4 2024',
    category: 'Presentations',
    description: 'Quarterly update for investors and stakeholders.',
    size: '12.3 MB',
    type: 'PDF',
    date: 'October 2024',
  },
  {
    title: 'Partnership Application Form',
    category: 'Forms',
    description: 'Apply to become an authorized Zuma Agro partner or distributor.',
    size: '245 KB',
    type: 'PDF',
    date: 'Updated Nov 2024',
  },
  {
    title: 'Logo Pack',
    category: 'Media Kit',
    description: 'Official logos in various formats for media and partners.',
    size: '15.2 MB',
    type: 'ZIP',
    date: 'January 2024',
  },
  {
    title: 'Product Catalog',
    category: 'Brochures',
    description: 'Complete catalog of our livestock, grain, and processed products.',
    size: '6.8 MB',
    type: 'PDF',
    date: 'June 2024',
  },
];
---

<BaseLayout title="Downloads | Zuma Agro">
  <Header />

  <main>
    <!-- Hero -->
    <section class="relative h-[40vh] flex items-center bg-zuma-navy">
      <div class="absolute inset-0">
        <img src="/images/downloads-hero.jpg" alt="Downloads" class="w-full h-full object-cover opacity-40" />
      </div>
      <div class="relative container mx-auto px-4 sm:px-6 lg:px-8">
        <Breadcrumb items={[{ label: 'Downloads' }]} />
        <h1 class="text-5xl md:text-6xl font-bold text-white mt-8">
          Resource <span class="text-zuma-gold">Library</span>
        </h1>
      </div>
    </section>

    <!-- Downloads Grid -->
    <Section>
      <!-- Category Filters -->
      <div class="flex flex-wrap gap-2 mb-12">
        {categories.map((cat) => (
          <button class="px-4 py-2 rounded-full text-sm font-semibold bg-zuma-navy/5 text-zuma-navy hover:bg-zuma-gold hover:text-white transition-colors">
            {cat}
          </button>
        ))}
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {downloads.map((item) => (
          <GlassCard class="group">
            <div class="flex items-start justify-between mb-4">
              <div class="w-12 h-12 rounded-xl bg-zuma-gold/10 flex items-center justify-center">
                <svg class="w-6 h-6 text-zuma-gold" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                </svg>
              </div>
              <span class="px-2 py-1 bg-zuma-navy/5 text-zuma-navy/60 text-xs rounded">{item.type}</span>
            </div>

            <h3 class="text-lg font-bold text-zuma-navy mb-2 group-hover:text-zuma-gold transition-colors">
              {item.title}
            </h3>
            <p class="text-sm text-zuma-navy/70 mb-4 line-clamp-2">{item.description}</p>

            <div class="flex items-center justify-between text-sm text-zuma-navy/50 mb-4">
              <span>{item.size}</span>
              <span>{item.date}</span>
            </div>

            <Button href="#" variant="outline" size="sm" class="w-full">
              Download
            </Button>
          </GlassCard>
        ))}
      </div>
    </Section>

    <!-- Request Resource -->
    <Section class="bg-zuma-navy text-white">
      <div class="max-w-2xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-4">Can't Find What You Need?</h2>
        <p class="text-white/70 mb-8">
          Request specific documents or resources. Our team will get back to you within 24 hours.
        </p>
        <form class="flex flex-col md:flex-row gap-4">
          <input
            type="email"
            placeholder="Your email"
            class="flex-1 px-4 py-3 rounded-xl bg-white/10 border border-white/20 text-white placeholder-white/50 focus:outline-none focus:border-zuma-gold"
          />
          <Button type="submit" variant="primary">
            Request Resource
          </Button>
        </form>
      </div>
    </Section>
  </main>

  <Footer />
</BaseLayout>
