---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/layout/Header.astro';
import Footer from '../components/layout/Footer.astro';
import Section from '../components/ui/Section.astro';
import Breadcrumb from '../components/ui/Breadcrumb.astro';
import GlassCard from '../components/ui/GlassCard.astro';

const milestones = [
  { year: '2015', title: 'Foundation', description: 'Zuma Agro established with first ranch in Niger State' },
  { year: '2017', title: 'Expansion', description: 'Reached 10,000 cattle capacity across 3 ranches' },
  { year: '2019', title: 'Integration', description: 'Launched feed production and processing facilities' },
  { year: '2021', title: 'Export', description: 'First international export to Middle East markets' },
  { year: '2023', title: 'Scale', description: '50,000+ cattle, 10,000+ hectares under management' },
  { year: '2025', title: 'Innovation', description: 'Digital transformation and smart farming initiative' },
];

const team = [
  { name: 'Alhaji Ibrahim Zuma', role: 'Founder & Chairman', image: '/team/chairman.jpg' },
  { name: 'Dr. Amina Bello', role: 'CEO', image: '/team/ceo.jpg' },
  { name: 'Engr. James Okonkwo', role: 'COO', image: '/team/coo.jpg' },
  { name: 'Mrs. Ngozi Adeyemi', role: 'CFO', image: '/team/cfo.jpg' },
];

const values = [
  { title: 'Integrity', description: 'We operate with transparency and ethical standards', icon: '‚öñÔ∏è' },
  { title: 'Innovation', description: 'Embracing technology for agricultural advancement', icon: 'üí°' },
  { title: 'Sustainability', description: 'Environmental stewardship in all operations', icon: 'üåø' },
  { title: 'Excellence', description: 'Commitment to quality in everything we do', icon: '‚≠ê' },
];
---

<BaseLayout title="About Us | Zuma Agro">
  <Header />

  <main>
    <!-- Hero -->
    <section class="relative h-[60vh] flex items-center bg-zuma-navy">
      <div class="absolute inset-0">
        <img src="/images/about-hero.jpg" alt="Zuma Agro Operations" class="w-full h-full object-cover opacity-40" />
      </div>
      <div class="relative container mx-auto px-4 sm:px-6 lg:px-8">
        <Breadcrumb items={[{ label: 'About Us' }]} />
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white mt-8">
          Our <span class="text-zuma-gold">Story</span>
        </h1>
        <p class="text-xl text-white/80 max-w-2xl mt-6">
          From a single ranch to Nigeria's premier agro-industrial platform.
          Our journey of transforming agriculture.
        </p>
      </div>
    </section>

    <!-- Mission & Vision -->
    <Section>
      <div class="grid lg:grid-cols-2 gap-16">
        <div>
          <span class="text-zuma-gold font-semibold tracking-wider uppercase text-sm">Our Mission</span>
          <h2 class="text-4xl font-bold text-zuma-navy mt-4 mb-6">
            Building Food Security, One Ranch at a Time
          </h2>
          <p class="text-lg text-zuma-navy/70 leading-relaxed mb-6">
            To transform Nigeria's agricultural landscape through integrated, sustainable,
            and technology-driven operations that ensure food security, create employment,
            and contribute to national economic growth.
          </p>
        </div>
        <div>
          <span class="text-zuma-forest font-semibold tracking-wider uppercase text-sm">Our Vision</span>
          <h2 class="text-4xl font-bold text-zuma-navy mt-4 mb-6">
            Africa's Leading Agro-Industrial Enterprise
          </h2>
          <p class="text-lg text-zuma-navy/70 leading-relaxed mb-6">
            To be the foremost agro-industrial company in Africa, recognized for excellence,
            innovation, and sustainable practices that set the standard for the industry.
          </p>
        </div>
      </div>
    </Section>

    <!-- Timeline -->
    <Section class="bg-zuma-sky/30">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-zuma-navy mb-4">Our Journey</h2>
        <p class="text-lg text-zuma-navy/70">Key milestones in our growth story</p>
      </div>

      <div class="relative">
        <div class="absolute left-1/2 transform -translate-x-1/2 w-1 h-full bg-zuma-gold/20 hidden lg:block"></div>

        <div class="space-y-12">
          {milestones.map((milestone, index) => (
            <div class={`flex flex-col lg:flex-row items-center ${index % 2 === 0 ? 'lg:flex-row-reverse' : ''}`}>
              <div class="lg:w-1/2 lg:px-12">
                <GlassCard class="relative">
                  <div class="text-3xl font-bold text-zuma-gold mb-2">{milestone.year}</div>
                  <h3 class="text-xl font-bold text-zuma-navy mb-2">{milestone.title}</h3>
                  <p class="text-zuma-navy/70">{milestone.description}</p>
                </GlassCard>
              </div>
              <div class="w-4 h-4 bg-zuma-gold rounded-full border-4 border-white shadow-lg z-10 my-4 lg:my-0"></div>
              <div class="lg:w-1/2"></div>
            </div>
          ))}
        </div>
      </div>
    </Section>

    <!-- Core Values -->
    <Section>
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold text-zuma-navy mb-4">Our Core Values</h2>
        <p class="text-lg text-zuma-navy/70">The principles that guide everything we do</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {values.map((value) => (
          <GlassCard class="text-center group hover:shadow-xl transition-all">
            <div class="text-4xl mb-4 group-hover:scale-110 transition-transform">{value.icon}</div>
            <h3 class="text-xl font-bold text-zuma-navy mb-2">{value.title}</h3>
            <p class="text-zuma-navy/70">{value.description}</p>
          </GlassCard>
        ))}
      </div>
    </Section>

    <!-- Leadership Team -->
    <Section id="team" class="bg-zuma-navy text-white">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold mb-4">Leadership Team</h2>
        <p class="text-white/70">Meet the visionaries behind Zuma Agro</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {team.map((member) => (
          <div class="group">
            <div class="relative overflow-hidden rounded-2xl mb-4">
              <img
                src={member.image}
                alt={member.name}
                class="w-full aspect-[3/4] object-cover group-hover:scale-105 transition-transform duration-500"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-zuma-navy/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity"></div>
            </div>
            <h3 class="text-xl font-bold">{member.name}</h3>
            <p class="text-zuma-gold">{member.role}</p>
          </div>
        ))}
      </div>
    </Section>
  </main>

  <Footer />
</BaseLayout>
