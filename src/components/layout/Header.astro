---
import Logo from '../ui/Logo.astro';
import { mainNavigation } from '../../content/navigation';

const currentPath = Astro.url.pathname;
---

<header class="fixed top-0 left-0 right-0 z-50 transition-all duration-500 bg-white" id="main-header">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <nav class="flex items-center justify-between h-20">
      <!-- Logo -->
      <a href="/" class="flex-shrink-0">
        <Logo class="h-10 w-auto" animate />
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center space-x-1">
        {mainNavigation.map((item) => (
          <div class="relative group">
            <a
              href={item.href}
              class:list={[
                'px-4 py-2 text-sm font-medium transition-colors rounded-lg',
                currentPath === item.href
                  ? 'text-zuma-gold bg-zuma-gold/10'
                  : 'text-zuma-navy hover:text-zuma-gold hover:bg-zuma-navy/5',
              ]}
            >
              {item.label}
            </a>

            {item.children && (
              <div class="absolute top-full left-0 pt-2 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-300">
                <div class="glass rounded-xl p-2 min-w-[200px] shadow-xl">
                  {item.children.map((child) => (
                    <a
                      href={child.href}
                      class="block px-4 py-2 text-sm text-zuma-navy hover:text-zuma-gold hover:bg-zuma-navy/5 rounded-lg transition-colors"
                    >
                      {child.label}
                    </a>
                  ))}
                </div>
              </div>
            )}
          </div>
        ))}
      </div>

      <!-- CTA Button -->
      <div class="hidden lg:block">
        <a
          href="/contact"
          class="px-5 py-2.5 bg-zuma-gold text-zuma-navy text-sm font-semibold rounded-lg hover:bg-zuma-forest hover:text-white transition-colors"
        >
          Get in Touch
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        class="lg:hidden p-2 text-zuma-navy"
        id="mobile-menu-btn"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </nav>
  </div>

  <!-- Mobile Menu -->
  <div class="lg:hidden hidden bg-white border-t" id="mobile-menu">
    <div class="container mx-auto px-4 py-4 space-y-2">
      {mainNavigation.map((item) => (
        <a
          href={item.href}
          class="block px-4 py-3 text-zuma-navy hover:bg-zuma-navy/5 rounded-lg transition-colors"
        >
          {item.label}
        </a>
      ))}
      <a
        href="/contact"
        class="block px-4 py-3 bg-zuma-gold text-zuma-navy text-center font-semibold rounded-lg mt-4"
      >
        Get in Touch
      </a>
    </div>
  </div>
</header>

<!-- Spacer for fixed header -->
<div class="h-20"></div>

<script>
  // Header scroll effect
  const header = document.getElementById('main-header');
  let lastScroll = 0;

  window.addEventListener('scroll', () => {
    const currentScroll = window.pageYOffset;

    if (currentScroll > 50) {
      header.classList.add('bg-white/90', 'backdrop-blur-xl', 'shadow-sm');
    } else {
      header.classList.remove('bg-white/90', 'backdrop-blur-xl', 'shadow-sm');
    }

    lastScroll = currentScroll;
  });

  // Mobile menu toggle
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    const isExpanded = menuBtn.getAttribute('aria-expanded') === 'true';
    menuBtn.setAttribute('aria-expanded', (!isExpanded).toString());
    mobileMenu.classList.toggle('hidden');
  });
</script>
