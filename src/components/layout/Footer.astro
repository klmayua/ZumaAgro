---
import Logo from '../ui/Logo.astro';
import { footerNavigation } from '../../content/navigation';
---

<footer class="bg-zuma-navy text-white">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-20">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-12">
      <!-- Brand Column -->
      <div class="lg:col-span-2">
        <Logo class="h-12 w-auto text-white mb-6" variant="full" />
        <p class="text-white/70 mb-6 max-w-sm">
          Transforming Agriculture Through Strategic Integration.
          Building Nigeria's food security, one ranch at a time.
        </p>

        <!-- Social Links -->
        <div class="flex space-x-4">
          <a href="#" class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-zuma-gold hover:text-zuma-navy transition-colors">
            <span class="sr-only">LinkedIn</span>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/></svg>
          </a>
          <a href="#" class="w-10 h-10 rounded-full bg-white/10 flex items-center justify-center hover:bg-zuma-gold hover:text-zuma-navy transition-colors">
            <span class="sr-only">Twitter</span>
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/></svg>
          </a>
        </div>
      </div>

      <!-- Navigation Columns -->
      <div>
        <h4 class="font-semibold mb-4 text-zuma-gold">Company</h4>
        <ul class="space-y-3">
          {footerNavigation.company.map((item) => (
            <li>
              <a href={item.href} class="text-white/70 hover:text-white transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h4 class="font-semibold mb-4 text-zuma-gold">Operations</h4>
        <ul class="space-y-3">
          {footerNavigation.operations.map((item) => (
            <li>
              <a href={item.href} class="text-white/70 hover:text-white transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h4 class="font-semibold mb-4 text-zuma-gold">Resources</h4>
        <ul class="space-y-3">
          {footerNavigation.resources.map((item) => (
            <li>
              <a href={item.href} class="text-white/70 hover:text-white transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-white/10 mt-12 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-white/50 text-sm">
        Â© {new Date().getFullYear()} Zuma Agro Allied Integrated Limited. All rights reserved.
      </p>
      <div class="flex space-x-6 mt-4 md:mt-0">
        <a href="/privacy" class="text-white/50 hover:text-white text-sm transition-colors">Privacy Policy</a>
        <a href="/terms" class="text-white/50 hover:text-white text-sm transition-colors">Terms of Use</a>
      </div>
    </div>
  </div>
</footer>
