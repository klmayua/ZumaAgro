---
import Section from '../ui/Section.astro';
import Button from '../ui/Button.astro';

const phases = [
  { number: '01', title: 'Land Acquisition', icon: 'ğŸï¸' },
  { number: '02', title: 'Breeding Program', icon: 'ğŸ§¬' },
  { number: '03', title: 'Feed Production', icon: 'ğŸŒ¾' },
  { number: '04', title: 'Ranching', icon: 'ğŸ„' },
  { number: '05', title: 'Processing', icon: 'ğŸ­' },
  { number: '06', title: 'Quality Control', icon: 'âœ…' },
  { number: '07', title: 'Distribution', icon: 'ğŸš›' },
  { number: '08', title: 'Export', icon: 'ğŸŒ' },
  { number: '09', title: 'Market', icon: 'ğŸª' },
];
---

<Section id="model" class="bg-zuma-wheat/30">
  <div class="grid lg:grid-cols-2 gap-16 items-center">
    <!-- Left: Content -->
    <div>
      <span class="inline-block px-4 py-1 bg-zuma-forest/10 text-zuma-forest text-sm font-semibold rounded-full mb-4">
        Our Model
      </span>
      <h2 class="text-4xl md:text-5xl font-bold text-zuma-navy mb-6">
        The 9-Phase <span class="text-zuma-gold">Integration</span> Framework
      </h2>
      <p class="text-lg text-zuma-navy/70 mb-8 leading-relaxed">
        Our proprietary integrated model ensures complete control over the agricultural
        value chain, from land acquisition to market delivery. This approach guarantees
        quality, traceability, and consistent supply.
      </p>

      <div class="flex flex-wrap gap-4 mb-8">
        <div class="flex items-center space-x-2">
          <div class="w-3 h-3 bg-zuma-gold rounded-full"></div>
          <span class="text-sm text-zuma-navy/70">Complete Traceability</span>
        </div>
        <div class="flex items-center space-x-2">
          <div class="w-3 h-3 bg-zuma-forest rounded-full"></div>
          <span class="text-sm text-zuma-navy/70">Quality Assurance</span>
        </div>
        <div class="flex items-center space-x-2">
          <div class="w-3 h-3 bg-zuma-navy rounded-full"></div>
          <span class="text-sm text-zuma-navy/70">Supply Security</span>
        </div>
      </div>

      <Button href="/model" variant="primary" size="lg">
        Explore the Full Model
      </Button>
    </div>

    <!-- Right: Interactive Diagram -->
    <div class="relative">
      <div class="grid grid-cols-3 gap-4">
        {phases.map((phase, index) => (
          <div
            class="group relative p-4 bg-white rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1 cursor-pointer model-phase"
            data-phase={index}
          >
            <div class="text-3xl mb-2">{phase.icon}</div>
            <div class="text-xs font-bold text-zuma-gold mb-1">Phase {phase.number}</div>
            <div class="text-sm font-semibold text-zuma-navy">{phase.title}</div>
          </div>
        ))}
      </div>
    </div>
  </div>
</Section>

<script>
  import { gsap } from 'gsap';

  gsap.from('.model-phase', {
    y: 30,
    opacity: 0,
    duration: 0.5,
    stagger: 0.1,
    ease: 'power3.out',
    scrollTrigger: {
      trigger: '#model',
      start: 'top 70%',
    }
  });
</script>
