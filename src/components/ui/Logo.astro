{variant === 'full' && (
  <svg
    class={`logo-svg ${className}`}
    viewBox="0 0 200 50"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    aria-label="Zuma Agro Logo"
  >
    <!-- ZUMA Text -->
    <text
      x="0"
      y="38"
      class="logo-text-zuma"
      fill="currentColor"
      font-family="Satoshi, sans-serif"
      font-weight="800"
      font-size="36"
    >
      ZUMA
    </text>

    <!-- AGRO text with accent color -->
    <text
      x="95"
      y="38"
      class="logo-text-agro"
      fill="#C9A227"
      font-family="Satoshi, sans-serif"
      font-weight="800"
      font-size="36"
    >
      AGRO
    </text>

    <!-- Decorative element (replace with logo mark) -->
    <circle
      cx="185"
      cy="25"
      r="8"
      class={`logo-circle ${animate ? 'animate-draw' : ''}`}
      fill="none"
      stroke="#1B4D3E"
      stroke-width="2"
      stroke-dasharray="100"
      stroke-dashoffset={animate ? "100" : "0"}
    />
  </svg>
)}

{variant === 'icon' && (
  <svg
    class={className}
    viewBox="0 0 50 50"
    fill="none"
    aria-label="Zuma Agro Icon"
  >
    <!-- Icon version of logo -->
    <circle cx="25" cy="25" r="20" fill="#C9A227" />
    <text x="25" y="32" text-anchor="middle" fill="#0A1628" font-weight="bold" font-size="20">Z</text>
  </svg>
)}

<style>
  .logo-svg {
    @apply text-zuma-navy;
  }

  .animate-draw {
    animation: draw 2s ease-in-out forwards;
  }

  @keyframes draw {
    to {
      stroke-dashoffset: 0;
    }
  }

  /* Hover effect */
  .logo-svg:hover .logo-text-agro {
    @apply text-zuma-forest;
    transition: fill 0.3s ease;
  }
</style>
