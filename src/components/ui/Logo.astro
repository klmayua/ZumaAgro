---
interface Props {
  class?: string;
  animate?: boolean;
  variant?: 'full' | 'icon' | 'wordmark';
}

const { class: className = '', animate = false, variant = 'full' } = Astro.props;
---

<!--
  TODO: Replace this placeholder with your ACTUAL logo SVG
