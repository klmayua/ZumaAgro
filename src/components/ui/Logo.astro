---
interface Props {
  class?: string;
  animate?: boolean;
  variant?: 'full' | 'icon' | 'wordmark';
}

const { class: className = '', animate = false, variant = 'full' } = Astro.props;
---

<!-- Original logo from Base_Files/zuma_agro_logo.png -->

{variant === 'full' && (
  <svg
    class={`logo-svg ${className}`}
    viewBox="0 0 320 60"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
    aria-label="Zuma Agro Logo"
  >
    <!-- Green leaf icon - outer shape -->
    <path d="M55 48C55 48 42 40 42 28C42 18 48 12 55 12C62 12 68 18 68 28C68 40 55 48 55 48Z" fill="#49922E"/>
    <!-- Dark inner detail (same as text) -->
    <path d="M55 22C55 22 50 27 50 30C50 35 55 38 60 38C55 38 52 34 52 30C52 26 55 22 55 22Z" fill="#2E2E2E"/>
    
    <!-- ZUMA Text -->
    <text
      x="75"
      y="43"
      class="logo-text"
      fill="#2E2E2E"
      font-family="Satoshi, sans-serif"
      font-weight="800"
      font-size="44"
    >
      ZUMA
    </text>

    <!-- AGRO text (same color as ZUMA) -->
    <text
      x="200"
      y="43"
      class="logo-text"
      fill="#2E2E2E"
      font-family="Satoshi, sans-serif"
      font-weight="800"
      font-size="44"
    >
      AGRO
    </text>
  </svg>
)}

{variant === 'icon' && (
  <svg
    class={className}
    viewBox="0 0 50 50"
    fill="none"
    aria-label="Zuma Agro Icon"
  >
    <!-- Icon version of logo -->
    <circle cx="25" cy="25" r="20" fill="#C9A227" />
    <text x="25" y="32" text-anchor="middle" fill="#0A1628" font-weight="bold" font-size="20">Z</text>
  </svg>
)}

<style>
  .logo-svg {
    @apply text-zuma-navy;
  }

  .animate-draw {
    animation: draw 2s ease-in-out forwards;
  }

  @keyframes draw {
    to {
      stroke-dashoffset: 0;
    }
  }

  /* Hover effect */
  .logo-svg:hover .logo-text {
    @apply text-zuma-forest;
    transition: fill 0.3s ease;
  }
</style>
