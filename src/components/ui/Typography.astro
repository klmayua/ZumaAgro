---
interface Props {
  as?: 'h1' | 'h2' | 'h3' | 'h4' | 'p' | 'span';
  variant?: 'hero' | 'h1' | 'h2' | 'h3' | 'h4' | 'body' | 'body-lg' | 'caption' | 'label';
  class?: string;
  gradient?: boolean;
  animate?: boolean;
}

const {
  as: Tag = 'p',
  variant = 'body',
  class: className = '',
  gradient = false,
  animate = false,
} = Astro.props;

const variants = {
  hero: 'text-5xl md:text-7xl lg:text-8xl font-black tracking-tight leading-none',
  h1: 'text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight leading-tight',
  h2: 'text-3xl md:text-4xl lg:text-5xl font-semibold tracking-tight leading-tight',
  h3: 'text-2xl md:text-3xl font-semibold leading-tight',
  h4: 'text-xl md:text-2xl font-medium leading-snug',
  'body-lg': 'text-lg md:text-xl leading-relaxed',
  body: 'text-base md:text-lg leading-relaxed',
  caption: 'text-sm font-medium tracking-wide uppercase',
  label: 'text-xs font-semibold tracking-wider uppercase',
};

const baseClasses = variants[variant];
const gradientClass = gradient ? 'text-gradient' : '';
const animateClass = animate ? 'animate-slide-up' : '';
---

<Tag class:list={[baseClasses, gradientClass, animateClass, className]}>
  <slot />
</Tag>

<style>
  .animate-slide-up {
    opacity: 0;
    animation: slideUp 0.6s var(--ease-out-expo) forwards;
  }
</style>
