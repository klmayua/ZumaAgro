---
interface Props {
  id?: string;
  class?: string;
  container?: boolean;
  padding?: 'sm' | 'md' | 'lg' | 'xl';
}

const {
  id,
  class: className = '',
  container = true,
  padding = 'lg',
} = Astro.props;

const paddings = {
  sm: 'py-12',
  md: 'py-16',
  lg: 'py-20 md:py-28',
  xl: 'py-24 md:py-32',
};
---

<section id={id} class:list={[paddings[padding], className]}>
  {container ? (
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <slot />
    </div>
  ) : (
    <slot />
  )}
</section>
