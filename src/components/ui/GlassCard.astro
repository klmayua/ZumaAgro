---
interface Props {
  class?: string;
  hover?: boolean;
  padding?: 'sm' | 'md' | 'lg';
}

const {
  class: className = '',
  hover = true,
  padding = 'md',
} = Astro.props;

const paddings = {
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};
---

<div class:list={[
  'glass rounded-2xl',
  paddings[padding],
  hover && 'hover:shadow-2xl hover:shadow-zuma-navy/10 transition-all duration-500 hover:-translate-y-1',
  className,
]}>
  <slot />
</div>
