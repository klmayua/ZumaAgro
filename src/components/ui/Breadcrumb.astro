---
interface Props {
  items: { label: string; href?: string }[];
}

const { items } = Astro.props;
---

<nav aria-label="Breadcrumb" class="py-4">
  <ol class="flex items-center space-x-2 text-sm">
    <li>
      <a href="/" class="text-zuma-navy/50 hover:text-zuma-gold transition-colors">Home</a>
    </li>
    {items.map((item, index) => (
      <li class="flex items-center">
        <svg class="w-4 h-4 text-zuma-navy/30 mx-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
        {item.href ? (
          <a href={item.href} class="text-zuma-navy/50 hover:text-zuma-gold transition-colors">
            {item.label}
          </a>
        ) : (
          <span class="text-zuma-gold font-medium" aria-current="page">{item.label}</span>
        )}
      </li>
    ))}
  </ol>
</nav>
