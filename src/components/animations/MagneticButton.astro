---
interface Props {
  href?: string;
  class?: string;
}

const { href, class: className = '' } = Astro.props;
---

{
  href ? (
    <a href={href} class={`magnetic-btn ${className}`}>
      <span class="magnetic-content"><slot /></span>
    </a>
  ) : (
    <button class={`magnetic-btn ${className}`}>
      <span class="magnetic-content"><slot /></span>
    </button>
  )
}

<script>
  document.querySelectorAll('.magnetic-btn').forEach((btn) => {
    const content = btn.querySelector('.magnetic-content')

    btn.addEventListener('mousemove', (e) => {
      const rect = btn.getBoundingClientRect()
      const x = e.clientX - rect.left - rect.width / 2
      const y = e.clientY - rect.top - rect.height / 2

      btn.style.transform = `translate(${x * 0.2}px, ${y * 0.2}px)`
      content.style.transform = `translate(${x * 0.1}px, ${y * 0.1}px)`
    })

    btn.addEventListener('mouseleave', () => {
      btn.style.transform = 'translate(0, 0)'
      content.style.transform = 'translate(0, 0)'
    })
  })
</script>

<style>
  .magnetic-btn {
    display: inline-flex;
    transition: transform 0.2s ease-out;
  }
  .magnetic-content {
    display: inline-flex;
    transition: transform 0.2s ease-out;
  }
</style>
